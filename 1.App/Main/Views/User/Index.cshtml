@using Microsoft.AspNetCore.Razor.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Domain.Models.MainModel

@{
    ViewData["Title"] = "Покупатель";
}

@{
    var drinkList = new SelectList(Model.Drinks,"Id","Name");
}

<div class="text-center">
    <h1 class="display-4">Покупка напитков</h1>
    
    <div class="col-md-12">
        <form asp-action="Edit" id="feedBack">
            <div asp-validation-summary="ModelOnly" class="text-danger "></div>
            
            <div class="text-start">
                <label asp-for="Drinks" class="col-form-label-lg me-3 mt-5 w-auto">Выберите напиток:</label>
            </div>
            <div class="d-flex align-middle">
                @Html.DropDownListFor(model => model.Drinks,
                    drinkList, "", new { @class = "form-select w-25" })
                <div asp-validation-for="Drinks" id ="DrinksValidation"
                     class="text-danger col-form-label ms-2 invisible">Это обязательное поле!</div>
            </div>
            
            <div class="col-form-label-lg me-3 mt-5 w-auto text-start">Введите монеты:</div>
            <div id="purchasePartial" class="d-flex">
                @Html.Partial("_PurchasePartial", Model.EmptyPurchase)
            </div>
            <div class="d-flex mt-5">
                <div class="col-form-label me-3">Информация:</div>
                <div class="w-100 col-form-label">
                    
                </div>
                <input id="escBtn" type="button" value="Отмена" 
                       class="mx-3 px-5 col-form-label btn-primary"/>
                <input id="buyBtn" type="button" value="Купить" 
                       class="mх-0 px-5 col-form-label btn-primary"/>
            </div>
        </form>
    </div>
</div>

