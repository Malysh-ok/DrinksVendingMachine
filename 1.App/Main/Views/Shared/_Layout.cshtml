@{
    string userNavbarBrand = null!;
    string adminNavbarBrand = null!;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @{
                            if (ViewData["CodeName"]?.ToString() == "user")
                            {
                                userNavbarBrand = "navbar-bg";
                            }
                        }
                        <a class="nav-link text-dark @userNavbarBrand"
                           asp-area="" asp-controller="User" asp-action="Index">Покупатель</a>
                    </li>
                    <li class="nav-item">
                        @{
                            if (ViewData["CodeName"]?.ToString() == "admin")
                            {
                                adminNavbarBrand = "navbar-bg";
                            }
                        }
                        <a class="nav-link text-dark @adminNavbarBrand"
                           asp-area="" asp-controller="Admin" asp-action="Index">Администратор</a>
                    </li>
                    @* TODO: Выкинуть! *@
                    <li class="nav-item">
                        <a class="nav-link text-dark" 
                           asp-area="" asp-controller="New" asp-action="Index">New</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - <a asp-area="" asp-controller="User" asp-action="License">License</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>